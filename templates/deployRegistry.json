{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "prefix": {
        "type": "int",
        "metadata": {
          "description": "3 Digit Random Integer"
        },
        "minValue": 100,
        "maxValue": 999
      },
      "servicePrincipalId": {
        "metadata": {
          "description": "The Service Principal Object ID"
        },
        "type": "securestring"
      }
    },
    "variables": {
      "registryName": "[concat('registry', parameters('prefix'))]",
      "registryId": "[resourceId('Microsoft.ContainerRegistry/registries', variables('registryName'))]",
      "ContributorRole": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', '4d97b98b-1d4f-4787-a291-c67834d212e7')]"
    },
    "resources": [
      {
        "comments": "## Container Registry ##",
        "name": "[variables('registryName')]",
        "type": "Microsoft.ContainerRegistry/registries",
        "apiVersion": "2017-10-01",
        "location": "[resourceGroup().location]",
        "dependsOn": [],
        "sku": {
          "name": "Standard",
          "tier": "Standard"
        },
        "properties": {
          "adminUserEnabled": false
        }
      }
    ],
    "outputs": {
      "containerRegistry": {
        "type": "object",
        "value": {
          "id": "[variables('registryId')]",
          "name": "[variables('registryName')]"
        }
      }
    }
  }